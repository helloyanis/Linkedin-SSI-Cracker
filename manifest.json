{
    "manifest_version": 3,
    "name": "Linkedin SSI Cracker",
    "version": "1.2",
    "description": "You should not have to post on LinkedIn to prove your worth. This extension will modify the LinkedIn server response to display the SSI score you want!",
    "browser_specific_settings": {
        "gecko": {
          "id": "helloyanis@linkedin-ssi-cracker"
        }
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "webRequestFilterResponse",
        "storage"
    ],
    "host_permissions": [
        "*://*.linkedin.com/sales/ssi*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.svg"
    }
}